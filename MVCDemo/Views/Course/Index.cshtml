@model IEnumerable<MVCDemo.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-bottom:30px;"> List of Courses</h2>

@using (Html.BeginForm("Index", "Course", FormMethod.Get))
{
    <div style="margin-bottom:20px;">

        <strong>Search Course</strong>
        @Html.TextBox("SearchName", null, htmlAttributes: new { @class = "form-control form-inline" })

        <input type="submit" value="Filter" class="btn btn-primary btn-save" />
    </div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Course", null, null, null,
                                    new { id = item.CourseID }, new { @class = "btn btn-primary btn-large btn-custom" })

                @Html.ActionLink("Details", "Details", "Course", null, null, null,
                                    new { id = item.CourseID }, new { @class = "btn btn-primary btn-large btn-custom" })


               
                @Html.ActionLink("Delete", "DeleteConfirmed", "Course",
                 new { confirm = true, id = item.CourseID },
                 new { onclick = "return confirm('Are you sure want to delete this course with Course ID=" + @item.CourseNumber + "')",
                     @class = "btn btn-danger btn-large btn-custom"})
               
                @*@Html.ActionLink("Delete", "Delete", "Course", null, null, null,
                    new { id = item.CourseID }, new { @class = "btn btn-danger btn-large btn-custom" })*@

            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create", "Course", null, new { @class = "btn btn-primary btn-save" })
</p>
