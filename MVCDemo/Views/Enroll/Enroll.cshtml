@model MVCDemo.Models.Enrollment

@using MVCDemo.Models

@{
    ViewBag.Title = "Enroll";

}

<h2 style="margin-bottom:100px">Enroll Student</h2>

@using (Html.BeginForm())
{

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.student.EnrollmentNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                   @Html.EditorFor(m => m.student.EnrollmentNumber, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.student.Name, htmlAttributes: new { @class = " control-label col-md-2" })
                <div class="col-md-10">
                   @Html.EditorFor(m => m.student.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.course.Name,htmlAttributes : new { @class = "control-label col-md-2" } )
                <div class="col-md-10">
                    @Html.EditorFor(m => m.student.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>

            </div>
            @*@Html.DropDownList("CourseList", ViewBag.CList as SelectList, "Select", htmlAttributes: new { @class = "form-control control-label col-md-2" })*@
            <div class="form-group">
                @Html.LabelFor(m => m.course.CourseNumber, htmlAttributes: new { @class = " control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.course.CourseNumber, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary btn-save" />
                </div>
            </div>

        </div>
        <div>
            @Html.ActionLink("Cancel", "Index", "Student", new { @class = "btn btn-primary btn-save" })
        </div>
}
