@model IEnumerable<MVCDemo.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-bottom:30px;"> List of Students</h2>


    @using (Html.BeginForm("Index","Student",FormMethod.Get))
     {
        <div style="margin-bottom:20px;">
          
            <strong>Search Name</strong>  
            @Html.TextBox("SearchName",null, htmlAttributes:new {@class="form-control form-inline"}) 
          
            <input type="submit" value="Filter" class="btn btn-primary btn-save" />
        </div>
     }
    
<table class="table ">
    <tr>
        <th colspan="10">
            @Html.DisplayNameFor(model => model.EnrollmentID)
        </th>
        <th colspan="10">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td colspan="10">
                @Html.DisplayFor(modelItem => item.EnrollmentID)
            </td>
            <td colspan="10">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>


                @Html.ActionLink( "Edit"
                                , "Edit"
                                , "Student"
                                , new { id = item.StudentID }
                                , new { @class = "btn btn-primary btn-large btn-custom" })

                
                @Html.ActionLink( "Details"
                                , "Details", "Student"
                                , new { id = item.StudentID }
                                , new { @class = "btn btn-primary btn-large btn-custom" })


                @Html.ActionLink( "Delete"
                                , "Delete"
                                , "Student"
                                , new { id = item.StudentID }
                                , new { @class = "btn btn-danger btn-large btn-custom" })


                @Html.ActionLink( "Quick Enroll"
                                , "Enroll"
                                , "Student"
                                , new { id = item.StudentID }
                                , new { @class = "btn btn-primary btn-large btn-custom" })

            </td>

        </tr>
       

     }
    

</table>
@Html.ActionLink("Create New", "Create", "Student", null, new { @class = "btn btn-primary btn-save" })