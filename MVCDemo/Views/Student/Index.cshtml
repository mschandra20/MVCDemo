@model IEnumerable<MVCDemo.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Student", null, new { @class = "btn btn-primary btn-large btn-custom" })
</p>
<table class="table">
    <tr>
        <th colspan="10">
            @Html.DisplayNameFor(model => model.EnrollmentID)
        </th>
        <th colspan="10">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td colspan="10">
                @Html.DisplayFor(modelItem => item.EnrollmentID)
            </td>
            <td colspan="10">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>*@
            <td>


                @Html.ActionLink("Edit"
                                , "Edit"
                                , "Student"
                                , new { id = item.StudentID }, new { @class = "btn btn-primary btn-large btn-custom" })

                @Html.ActionLink("Details", "Details", "Student", 
                                    new { id = item.StudentID }, new { @class = "btn btn-primary btn-large btn-custom" })

                @Html.ActionLink("Delete", "Delete", "Student", 
                                    new { id = item.StudentID }, new { @class = "btn btn-danger btn-large btn-custom" })
                
                @Html.ActionLink("Quick Enroll", "Enroll", "Student",
                                    new { id = item.StudentID }, new { @class = "btn btn-primary btn-large btn-custom" })

            </td>
        </tr>
    }

</table>
